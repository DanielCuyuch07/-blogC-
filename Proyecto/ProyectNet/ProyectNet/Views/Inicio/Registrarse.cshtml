@model ProyectNet.Models.Usuario;



@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <!-- Tu contenido aquí si es necesario -->
                </div>
            </div>
            <div class="row justify-content-center align-items-center mt-5">
                <div class="col-md-6 col-lg-4 mt-3">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">! Registrarse !</h3>
                        <!-- Etiquetas de ASP.NET-->
                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                            <div class="form-group">

                                <label for="usuario" class="font-weight-bold"
                                       style="font-size: 16px; color: #020101;">Usuario</label>
                                <input type="text" id="usuario" class="form-control mt-2" placeholder="Ingrese su usuario"
                                       formControlName="usuario" asp-for="NombreUsuario" >

                                <label for="usuario" class="font-weight-bold mt-3"
                                       style="font-size: 16px; color: #020101;">Correo Electronico </label>
                                <input type="text" id="usuario" class="form-control mt-2" placeholder="Ingrese su correo"
                                       formControlName="usuario" asp-for="Correo">

                                <div class="form-group ">
                                    <label for="contraseña" class="font-weight-bold mt-3" style="font-size: 16px; color: #020101;">Contraseña</label>
                                    <input type="password" id="contraseña" class="form-control mt-3" placeholder="Ingrese su contraseña" formControlName="contraseña"
                                    asp-for="Clave"
                                    >
                                </div>

                            </div>
                            <!-- Otros campos de tu formulario -->

                            <div class="form-group mt-5">
                                <button type="submit" class="form-control btn btn-primary submit px-3 ">
                                    <a class="text-white text-decoration-none">Registrate</a>
                                </button>
                            </div>
                            <!-- -->
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion", "Inicio")"></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
