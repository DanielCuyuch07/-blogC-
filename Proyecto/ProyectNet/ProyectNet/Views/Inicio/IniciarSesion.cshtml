
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <!-- Tu contenido aquí si es necesario -->
                </div>
            </div>
            <div class="row justify-content-center align-items-center mt-5">
                <div class="col-md-6 col-lg-4 mt-3">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Iniciar Sesion</h3>
                        <!-- Etiquetas de ASP.NET-->
                        <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                            <div class="form-group">
                                <label for="usuario" class="font-weight-bold" style="font-size: 16px; color: #020101;">Usuario</label>
                                <input type="text" id="usuario" class="form-control mt-2" placeholder="Ingrese su usuario" name="correo">
                            </div>
                            <div class="form-group mt-3">
                                <label for="contraseña" class="font-weight-bold mt-3" style="font-size: 16px; color: #020101;">Contraseña</label>
                                <input type="password" id="contraseña" class="form-control mt-3" placeholder="Ingrese su contraseña" name="clave">
                            </div>
                            <!-- Otros campos de tu formulario -->
                            <div class="form-group mt-5">
                                <button type="submit" class="form-control btn btn-primary submit px-3 ">
                                    <a class="text-white text-decoration-none">Iniciar Sesión</a>
                                </button>
                            </div>
                        </form>

                        <div class="social d-flex justify-content-center mt-4">
                            <a href="@Url.Action("Registrarse", "Inicio")">
                                <span class="ion-logo-facebook mr-2 "></span>
                                Registrarse
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
